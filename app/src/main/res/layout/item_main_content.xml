<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iten_content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_button_purple"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <ImageView
        android:id="@+id/ico_item_main"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="@dimen/default_margin"
        android:contentDescription="@string/description_image" />

    <br.com.usp.willianerodrigues.course.util.RobotoRegular
        android:id="@+id/item_name_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="@string/internet"
        android:textColor="@color/md_purple_500"
        android:textSize="@dimen/fontsize_caption" />


</LinearLayout>