<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ExerciceActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_exercice"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/close_exercice"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:src="@drawable/close_white" />

                <ProgressBar
                    android:id="@+id/progressBarExercice"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:progress="100"
                    android:max="100"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_weight="1" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/container_exercice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_margin"
        android:orientation="vertical">

        <br.com.usp.willianerodrigues.course.util.RobotoBold
            android:id="@+id/text_new_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="start"
            android:text="Qual desses representa o mouse do computador?"
            android:textColor="@color/md_text"
            android:textSize="@dimen/fontsize_subhead" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/iten_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_purple"
                android:clickable="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/default_margin">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/monitor"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/description_image" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/iten_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_purple"
                android:clickable="true"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/default_margin">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/gabinete"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/description_image" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/iten_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_purple"
                android:clickable="true"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/default_margin">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/mouse"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/description_image" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/iten_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button_purple"
                android:clickable="true"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/default_margin">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/teclado"
                    android:layout_margin="@dimen/default_margin"
                    android:contentDescription="@string/description_image" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/nao_sei"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="@drawable/border_button_purple"
            android:padding="@dimen/min_margin"
            android:text="NÃ£o sei"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"
            android:textColor="@color/md_purple_500" />

    </LinearLayout>

</LinearLayout>
